                        </group>


                        <group string="Indicador de tiempo">
                            <field name="dias_entre_fechas_recepsion_entrega"/>
                            <field name="dias_entre_fechas_recepsion_orden"/>
                            <field name="dias_entre_fechas_cotizacion_ingreso_lab"/>
